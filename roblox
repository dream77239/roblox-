local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- åˆ›å»º ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MessageGui"
screenGui.ResetOnSpawn = true
screenGui.Parent = playerGui

-- åˆ›å»ºå¹¶è®¾ç½® TextLabel
local textLabel = Instance.new("TextLabel")
textLabel.Name = "MessageLabel"
textLabel.Size = UDim2.new(0.5, 0, 0.1, 0)      -- å æ®å±å¹•å®½åº¦ 50%ã€é«˜åº¦ 10%
textLabel.Position = UDim2.new(0.25, 0, 0.45, 0) -- å±…ä¸­
textLabel.BackgroundTransparency = 0.5          -- åŠé€æ˜èƒŒæ™¯
textLabel.BackgroundColor3 = Color3.new(0, 0, 0)
textLabel.TextColor3 = Color3.new(1, 1, 1)
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextSize = 36
textLabel.Text = "æˆ‘æ“ä½ å¦ˆé€¼ğŸ¤“"                -- è¿™é‡Œä¿®æ”¹ä½ æƒ³æ˜¾ç¤ºçš„æ–‡å­—
textLabel.TextWrapped = true                    -- è‡ªåŠ¨æ¢è¡Œ
textLabel.Parent = screenGui

-- æ˜¾ç¤ºæ—¶é•¿ï¼ˆç§’ï¼‰
local displayTime = 5

-- å»¶è¿Ÿåæ·¡å‡ºå¹¶é”€æ¯
delay(displayTime, function()
    if textLabel and textLabel.Parent then
        -- å‘ä¸Šç§»åŠ¨å¹¶æ”¶ç¼©é«˜åº¦
        textLabel:TweenPosition(UDim2.new(0.25, 0, 0.3, 0), "Out", "Quad", 1, true)
        textLabel:TweenSize(UDim2.new(0.5, 0, 0.05, 0), "Out", "Quad", 1, true)
        wait(1)
        screenGui:Destroy()
    end
end)
